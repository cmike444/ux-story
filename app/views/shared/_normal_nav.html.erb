<header class="navbar navbar-inverse normal" role="banner">
  <div class="container">
    <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_url, class: 'navbar-brand' do %>
          product<b>STORY</b>
        <% end %>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
        <ul class="nav navbar-nav">
          <li><%= link_to "Features", features_path %></li>
          <li><%= link_to "Learn", learn_path %></li>
          <li><%= link_to "Support", support_path %></li>
          <li><%= link_to "Pricing", pricing_path %></li>
          <% unless user_signed_in? %>
            <li><%= link_to "Login", new_user_session_path %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right visible-md visible-lg">
          <% if user_signed_in? %>
            <li>
                <%= link_to edit_user_registration_path, class: 'btn dropdown-toggle', :data => {toggle: "dropdown"} do %>
                  <%= current_user.email %> <span class="caret"></span>
                <% end %>
                <ul class="dropdown-menu normal-menu">
                  <li><%= link_to 'Account Settings', edit_user_registration_path %></li>
                  <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
                </ul>
              </li>
          <% else %>
            <li>
                <a href="signup.html" class="button">Sign up free</a>
            </li>
          <% end %>
        </ul>
    </nav>
  </div>
</header>