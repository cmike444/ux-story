<div class="container-fluid secondary-nav">
  <div class="row">
    <div class="col-sm-6 text-left">
      <h1 class="animated fadeIn">
        My Projects&nbsp;
      </h1>
    </div>
    <div class="col-sm-6 text-right">
      <%= link_to new_project_path do %>
        <div class="add_new_fab animated zoomIn">
          <%= material_icon.add.md_24 %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container-fluid projects">
  <div class="row">
    <% @projects.each do |project| %>
      <%= link_to project_path(project) do %>
        <div class="col-sm-4">
          <div class="panel">
            <div class="panel-heading">
              <h3 class="panel-title"><%= project.name ||= "Project ##{project.id}" %>
                <i class="material-icons feature-section-more dropdown-toggle pull-right" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">more_horiz</i>
              </h3>
            </div>
            <div class="panel-body">
              <% if project.personas.any? %>
                <%= render partial: "projects/index_partials/personas", locals: { project: project } %>
              <% else %>
                <%= render partial: "projects/index_partials/empty_personas" %>
              <% end %>
              
              <div class="col-sm-12">
                <h3><%= project.stories.size %></h3>
                <label class="label-text">Total Stories</label>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

